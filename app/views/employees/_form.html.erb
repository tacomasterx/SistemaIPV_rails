  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :phone_home %>
    <%= form.number_field :phone_home %>
  </div>

  <div class="field">
    <%= form.label :phone_mobile %>
    <%= form.number_field :phone_mobile %>
  </div>

  <div class="field">
    <%= form.label :charge %>
    <%= form.text_field :charge %>
