<script>
  function typeSelection(element) {
      if(element.value == 5){
        document.getElementById('product_unit').disabled = true;
        document.getElementById('product_unit_label').style.visibility = "visible";
        document.getElementById('product_unit').style.visibility = "visible";
      } else if (element.value == 0) {
        document.getElementById('product_unit').disabled = true;
        document.getElementById('product_unit_label').style.visibility = "hidden";
        document.getElementById('product_unit').style.visibility = "hidden";
      } else {
        document.getElementById('product_unit').disabled = false;
        document.getElementById('product_unit_label').style.visibility = "visible";
        document.getElementById('product_unit').style.visibility = "visible";
      }

  }
</script>
