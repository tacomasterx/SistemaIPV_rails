<p id="notice"><%= notice %></p>

<% public_price = @product.price_unit+(@product.price_unit*@product.profit/100) %>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Type:</strong>
  <%= @product.product_type.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity.to_s + @product.unit %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @product.weight.to_s + 'gr' %>
</p>

<p>
  <strong>Price unit:</strong>
  <%= @product.price_unit %>
</p>

<p>
  <strong>Public price:</strong>
  <%= public_price %>
</p>

<p>
  <strong>Profit:</strong>
  <%= @product.profit %>%
</p>

<p>
  <strong>Price 2:</strong>
  <%= @product.price_2 %>%
  <strong> | </strong>
  <%= public_price-(@product.price_unit*@product.price_2/100) %>
</p>

<p>
  <strong>Price 3:</strong>
  <%= @product.price_3 %>%
</p>

<p>
  <strong>Price 4:</strong>
  <%= @product.price_4 %>%
</p>

<p>
  <strong>Price 5:</strong>
  <%= @product.price_5 %>%
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Sku:</strong>
  <%= @product.sku %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
