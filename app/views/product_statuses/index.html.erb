<p id="notice"><%= notice %></p>

<h1>Product Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Managable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_statuses.each do |product_status| %>
      <tr>
        <td><%= product_status.name %></td>
        <td><%= product_status.managable %></td>
        <td><%= link_to 'Show', product_status %></td>
        <td><%= link_to 'Edit', edit_product_status_path(product_status) %></td>
        <td><%= link_to 'Destroy', product_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Status', new_product_status_path %>
